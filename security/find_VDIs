#!/usr/bin/env bash

check_vmware_viewer() {
    local log="$(
        timeout $timeout vmware-view -q -s $1 2>&1 | \
        awk '{print $NF}'
    )"
    if [[ -n $debug ]]; then
        mkdir -p logs
        sed -r "s/[^|]+\| //" $log >logs/$1.log
    fi
    case "$(connection_status $log)" in
        "fail") ;;
        "hung"|"success") name_lookup "$1" ;;
        *) warn "Unknown - Look at logs for $1" >&2 ;;
    esac
}

check_web() {
    local found="$(
        curl --connect-timeout $timeout -kL --max-time $timeout -s \
        "https://$1/$index" | grep -i -m 1 "vmware horizon"
    )"
    [[ -z $found ]] || name_lookup "$1"
}

connection_status() {
    if [[ -n $(grep -o "FAIL" $1) ]]; then
        echo "fail"
        return
    fi
    if [[ -z $(grep -o "response" $1) ]]; then
        echo "hung"
        return
    fi
    if [[ -n $(grep -o "ParseResult" $1) ]]; then
        echo "success"
        return
    fi
    echo "unknown"
}

err() { echo -e "\e[31m[!] $@\e[0m"; }

info() { echo -e "\e[32m[+] $@\e[0m"; }

name_lookup() {
    local -a names=($(nslookup $1 | awk '/name/ {print $NF}'))
    for name in "${names[@]}"; do
        echo "${name%.}    $1"
    done; unset name
}

usage() {
    echo "Usage: ${0/*\//} [OPTIONS] <file1>... [fileN]"
    echo
    echo "Find valid VDI endpoints"
    echo
    echo "Options:"
    echo "    -d, --debug           Keep log files for debugging"
    echo "    -h, --help            Display this help message"
    echo "    -o, --output=FILE     Write output to a file"
    echo "    -p, --parallel        Run using parallel"
    echo "    --threads=NUM         Use the specied number of threads"
    echo "                          if running in parallel (default:"
    echo "                          $threads)"
    echo "    -t, --timeout=SECS    Timeout (default: $timeout)"
    echo "    -w, --web             Scrape web instead of trying to"
    echo "                          connect"
    echo
    exit $1
}

warn() { echo -e "\e[33m[-] $@\e[0m"; }

declare -a args
unset debug output parallel web
index="portal/webclient/index.html"
threads="32"
timeout="2"

while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-d"|"--debug") debug="true" ;;
        "-h"|"--help") usage 0 ;;
        "-o"|"--output"*)
            case "$1" in
                "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 1 ;;
                *) shift; [[ $# -gt 0 ]] || usage 1; arg="$1" ;;
            esac
            output="$arg"
            ;;
        "-p"|"--parallel") parallel="true" ;;
        "--threads"*)
            case "$1" in
                "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 1 ;;
                *) shift; [[ $# -gt 0 ]] || usage 1; arg="$1" ;;
            esac
            threads="$arg"
            ;;
        "-t"|"--timeout"*)
            case "$1" in
                "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 1 ;;
                *) shift; [[ $# -gt 0 ]] || usage 1; arg="$1" ;;
            esac
            timeout="$arg"
            ;;
        "-w"|"--web") web="true" ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

[[ $# -gt 0 ]] || usage 2

if [[ -n $parallel ]]; then
    if [[ -z $(command -v parallel) ]] ||
       [[ -z $(command -v env_parallel.bash) ]]
    then
        warn "Parallel is not installed, using default behavior"
        unset parallel
    fi
fi

declare -a ips=($(cat $@ 2>/dev/null))
let "total = ${#ips[@]}"

if [[ -n $parallel ]]; then
    source $(command -v env_parallel.bash)
    info "$total jobs to run"
    if [[ -z $web ]]; then
        env_parallel -P $threads check_vmware_viewer {} ::: ${ips[@]}
    else
        env_parallel -P $threads check_web {} ::: ${ips[@]}
    fi | tee -a $output
else
    let "count = 1"
    for ip in "${ips[@]}"; do
        echo -en "[$count/$total]                              \r" >&2
        if [[ -z $web ]]; then
            check_vmware_viewer "$ip"
        else
            check_web "$ip"
        fi
        let "count += 1"
    done | tee -a $output; unset ip
fi
