#!/usr/bin/env bash

### Helpers begin
checkdeps() {
    for d in "${deps[@]}"; do
        [[ -n $(command -v $d) ]] || errx 128 "$d is not installed"
    done; unset d
}
err() { echo -e "${color:+\e[31m}[!] $@\e[0m"; }
errx() { echo -e "${color:+\e[31m}[!] ${@:2}\e[0m"; exit $1; }
good() { echo -e "${color:+\e[32m}[+] $@\e[0m"; }
info() { echo -e "${color:+\e[37m}[*] $@\e[0m"; }
long_opt() {
    local arg shift="0"
    case "$1" in
        "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 127 ;;
        *) shift="1"; shift; [[ $# -gt 0 ]] || usage 127; arg="$1" ;;
    esac
    echo "$arg"
    return $shift
}
subinfo() { echo -e "${color:+\e[36m}[=] $@\e[0m"; }
warn() { echo -e "${color:+\e[33m}[-] $@\e[0m"; }
### Helpers end

ftp_delete() {
    [[ $# -eq 1 ]] || usage 3

    ftp -inv $host <<EOF
user $user $pass
delete $1
bye
EOF
}

ftp_get() {
    [[ $# -eq 1 ]] || usage 4

    ftp -inv $host <<EOF
user $user $pass
get $1 $$(basename $1)
bye
EOF
}

ftp_upload() {
    [[ $# -eq 2 ]] || usage 5

    ftp -inv $host <<EOF
user $user $pass
mkdir $(dirname $2)
bin
put $1 $2
bye
EOF
}

usage() {
    echo "Usage: ${0##*/} [OPTIONS] <host> <user> <pass> ..."
    echo
    echo "FTP tool for easy scripting"
    echo
    echo "Options:"
    echo "    -d, --delete    Delete file on ftp server"
    echo "    -g, --get       Get file from ftp server"
    echo "    -h, --help      Display this help message"
    echo "    -u, --upload    Upload file to ftp server"
    echo
    echo "Examples:"
    echo "    ftp_util --upload host user pass file wwwroot/file"
    echo "    ftp_util --delete host user pass wwwroot/file"
    echo "    ftp_util --get host user pass wwwroot/file"
    echo
    exit $1
}

declare -a args deps
unset action help
color="true"
deps+=("ftp")

# Check for missing dependencies
checkdeps

# Parse command line options
while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-d"|"--delete") action="delete" ;;
        "-g"|"--get") action="get" ;;
        "-h"|"--help") help="true" ;;
        "-u"|"--upload") action="upload" ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

# Check for valid params
[[ -z $help ]] || usage 0
[[ $# -ge 3 ]] || usage 1
[[ -n $action ]] || usage 2

host="$1" && shift
user="$1" && shift
pass="$1" && shift

case "$action" in
    "delete") ftp_delete $@ ;;
    "get") ftp_get $@ ;;
    "upload") ftp_upload $@ ;;
esac
