### Helpers begin
check_deps() {
    local missing
    for d in "${deps[@]}"; do
        if [[ -z $(command -v "$d") ]]; then
            # Force absolute path
            if [[ ! -e "/$d" ]]; then
                err "$d was not found"
                missing="true"
            fi
        fi
    done; unset d
    [[ -z $missing ]] || exit 128
}
err() { echo -e "${color:+\e[31m}[!] $*\e[0m"; }
errx() { err "${*:2}"; exit "$1"; }
good() { echo -e "${color:+\e[32m}[+] $*\e[0m"; }
info() { echo -e "${color:+\e[37m}[*] $*\e[0m"; }
long_opt() {
    local arg shift="0"
    case "$1" in
        "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || return 127 ;;
        *) shift="1"; shift; [[ $# -gt 0 ]] || return 127; arg="$1" ;;
    esac
    echo "$arg"
    return $shift
}
subinfo() { echo -e "${color:+\e[36m}[=] $*\e[0m"; }
warn() { echo -e "${color:+\e[33m}[-] $*\e[0m"; }
### Helpers end

usage() {
    cat <<EOF
Usage: ${0##*/} [OPTIONS] <username>

DESCRIPTION
    Generate /etc/passwd entries.

OPTIONS
    -h, --help             Display this help message
    -n, --no-block         Use non-blocking source of random
    --no-color             Disable colorized output
    -p, --passwd=PASSWD    Use specified password

EOF
    exit "$1"
}

declare -a args
unset help noblock passwd
color="true"

# Parse command line options
while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift; args+=("$@"); break ;;
        "-h"|"--help") help="true" ;;
        "-n"|"--no-block") noblock="true" ;;
        "--no-color") unset color ;;
        "-p"|"--passwd"*) passwd="$(long_opt "$@")" ;;
        *) args+=("$1") ;;
    esac
    case "$?" in
        0) ;;
        1) shift ;;
        *) usage $? ;;
    esac
    shift
done
[[ ${#args[@]} -eq 0 ]] || set -- "${args[@]}"

# Help info
[[ -z $help ]] || usage 0

# Check for missing dependencies
declare -a deps
deps+=("awk")
deps+=("makepasswd")
check_deps

# Check for valid params
[[ $# -eq 1 ]] || usage 1

[[ -n $passwd ]] || passwd="$1"

echo -n "$1"
if [[ -z $noblock ]];  then
    makepasswd --clearfrom=<(echo "$passwd") --crypt-md5 | \
        awk '{print ":"$2":0:0:::"}'
else
    makepasswd --clearfrom=<(echo "$passwd") --crypt-md5 \
        --randomseed $RANDOM | awk '{print ":"$2":0:0:::"}'
fi
