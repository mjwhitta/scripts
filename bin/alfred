usage() {
    echo "Usage: ${0/*\//} [OPTIONS]"
    echo
    echo "Wrapper for rofi"
    echo
    echo "Options:"
    echo "    -h, --help    Display this help message"
    echo "    -s, --ssh     Start SSH tab"
    echo
    exit $1
}

declare -a args
tab="run"

while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-h"|"--help") usage 0 ;;
        "-s"|"--ssh") tab="ssh" ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

[[ $# -eq 0 ]] || usage 2

# Ruby
export GEM_HOME="$HOME/.gem/ruby"
export GEM_PATH="$GEM_HOME/gems"

# Go
export GOPATH="$HOME/.go"

# PATH
# Find dirs that should be in PATH
unset PTH
for dir in \
    $HOME/bin \
    $HOME/scripts/bin \
    $HOME/.local/bin \
    $GEM_HOME/bin \
    $GOPATH \
    $GOPATH/bin \
    /usr/local/bin \
    /usr/local/sbin \
    /usr/bin \
    /usr/sbin \
    /bin \
    /sbin \
    $HOME/Android/Sdk/platform-tools \
    $HOME/Android/Sdk/tools \
    $HOME/Android/Ndk \
    $HOME/.rvm/bin \
; do
    [[ ! -d $dir ]] || PTH="$PTH:$dir"
done; unset dir

# Find missing from PATH
for dir in $(echo "$PATH" | sed "s|:| |g"); do
    [[ -n $(echo "$PTH" | \grep $dir) ]] || PTH="$PTH:$dir"
done; unset dir

# Set PATH
[[ -z $PTH ]] || export PATH="${PTH/:/}"
unset PTH

# SSH agent
if [[ -n $(command -v ssh-agent) ]]; then
    [[ -f $HOME/.ssh/agent/env ]] && . $HOME/.ssh/agent/env >/dev/null
fi

[[ -z $(command -v rofi) ]] && echo "Please install rofi" && exit 1

rofi -show $tab
