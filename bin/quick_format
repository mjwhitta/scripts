usage() {
    echo "Usage: ${0/*\//} [OPTIONS] <dev>"
    echo
    echo "This script creates a new partition table with a single,"
    echo "ext4, bootable partition."
    echo
    echo "Options:"
    echo "    -h, --help           Display this help message"
    echo "    -l, --label=LABEL    Set the partition label"
    echo "    -y, --yes            Remove existing signatures"
    echo
    exit $1
}

declare -a args
unset lbl yes

while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-h"|"--help") usage 0 ;;
        "-l"|"--label"*)
            case "$1" in
                "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 1 ;;
                *) shift; [[ $# -gt 0 ]] || usage 1; arg="$1" ;;
            esac
            lbl="-L $arg"
            ;;
        "-y"|"--yes") yes="Y" ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

[[ $# -eq 1 ]] || usage 2
dev="$1"

sed -e "s/\s*\([\+0-9a-zA-Z]*\).*/\1/" <<EOF | sudo fdisk $dev
  o    # clear the in memory partition table
  n    # new partition
  p    # primary partition
  1    # partition number 1
       # default - start at beginning of disk
       # default - extend partition to end of disk
  $yes # remove existing signature
  a    # make a partition bootable
  p    # print the in-memory partition table
  w    # write the partition table and exit
EOF

err="$?"
[[ $err -eq 0 ]] || exit $err

sudo mkfs.ext4 -F -O "^64bit" $lbl ${dev}1
