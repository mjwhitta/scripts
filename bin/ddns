### Helpers begin
checkdeps() {
    for d in "${deps[@]}"; do
        [[ -n $(command -v $d) ]] || errx 128 "$d is not installed"
    done; unset d
}
err() { echo -e "${color:+\e[31m}[!] $@\e[0m"; }
errx() { echo -e "${color:+\e[31m}[!] ${@:2}\e[0m"; exit $1; }
good() { echo -e "${color:+\e[32m}[+] $@\e[0m"; }
info() { echo -e "${color:+\e[37m}[*] $@\e[0m"; }
long_opt() {
    local arg shift="0"
    case "$1" in
        "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 127 ;;
        *) shift="1"; shift; [[ $# -gt 0 ]] || usage 127; arg="$1" ;;
    esac
    echo "$arg"
    return $shift
}
subinfo() { echo -e "${color:+\e[36m}[=] $@\e[0m"; }
warn() { echo -e "${color:+\e[33m}[-] $@\e[0m"; }
### Helpers end

update_dns() {
    local creds="$username:$password"
    local query="hostname=$domain&myip=$1"
    curl -kLs "https://$creds@domains.google.com/nic/update?$query"
}

usage() {
    echo "Usage: ${0##*/} [OPTIONS]"
    echo
    echo "Detect when IP changes and update dynamic DNS entry using"
    echo "Google Domains API"
    echo
    echo "Options:"
    echo "    -d, --domain=DOMAIN    Domain entry to update"
    echo "    -e, --external         Use external IP (default)"
    echo "    -f, --file=FILE        Compare to IP in specified file"
    echo "    --force                Update even if IP hasn't changed"
    echo "    -h, --helpo            Display this help message"
    echo "    -i, --internal         Use internal IP"
    echo "    --iface=IFACE          Use specified interface"
    echo "                           (default: $iface)"
    echo "    --ip=IP                Compare to specified IP"
    echo "    --nocolor              Disable colorized output"
    echo "    -p, --pass=PASSWD      Password for API"
    echo "    --url=URL              URL that returns just an IP"
    echo "                           (default: $ip_url)"
    echo "    -u, --user=USER        Username for API"
    echo
    exit $1
}

declare -a args deps
unset domain file force help old_ip password username
color="true"
curl_cmd="curl --connect-timeout 7 -kLm 7 -s"
deps+=("curl")
deps+=("ip")
external="true"
ip_url="https://icanhazip.com"

# Check for missing dependencies
checkdeps

iface="$(ip -o a | awk '!/\slo\s/ && /inet\s/ {print $2; exit}')"

# Parse command line options
while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-d"|"--domain"*) domain="$(long_opt "$@")" || shift ;;
        "-e"|"--external") external="true" ;;
        "-f"|"--file"*) file="$(long_opt "$@")" || shift ;;
        "--force") force="true" ;;
        "-h"|"--help") help="true" ;;
        "-i"|"--internal") unset external ;;
        "--iface"*) iface="$(long_opt "$@")" || shift ;;
        "--ip"*) old_ip="$(long_opt "$@")" || shift ;;
        "--nocolor") unset color ;;
        "-p"|"--pass"*) password="$(long_opt "$@")" || shift ;;
        "--url"*) ip_url="$(long_opt "$@")" || shift ;;
        "-u"|"--user"*) username="$(long_opt "$@")" || shift ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

# Check for valid params
[[ -z $help ]] || usage 0
[[ $# -eq 0 ]] || usage 1
[[ -n $domain ]] || usage 2
[[ -n $iface ]] || usage 3
[[ -n $password ]] || usage 4
[[ -n $username ]] || usage 5

# Get data
[[ -z $file ]] || [[ ! -f $file ]] || old_ip="$(head -n 1 $file)"
if [[ -n $external ]]; then
    new_ip="$($curl_cmd --interface $iface "$ip_url")"
else
    new_ip="$(ip -o a | awk "/$iface\s+inet\s/ {print \$4}")"
    new_ip="${new_ip%/*}"
fi

# Compare and update
if [[ -n $force ]] ||
   [[ -z $old_ip ]] ||
   [[ $new_ip != $old_ip ]]
then
    echo "$new_ip" | tee $file
    update_dns "$new_ip"
fi
