### Helpers begin
check_deps() {
    local missing
    for d in "${deps[@]}"; do
        if [[ -z $(command -v "$d") ]]; then
            # Force absolute path
            if [[ ! -f "/$d" ]]; then
                err "$d was not found"
                missing="true"
            fi
        fi
    done; unset d
    [[ -z $missing ]] || exit 128
}
err() { echo -e "${color:+\e[31m}[!] $*\e[0m"; }
errx() { err "${*:2}"; exit "$1"; }
good() { echo -e "${color:+\e[32m}[+] $*\e[0m"; }
info() { echo -e "${color:+\e[37m}[*] $*\e[0m"; }
long_opt() {
    local arg shift="0"
    case "$1" in
        "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 127 ;;
        *) shift="1"; shift; [[ $# -gt 0 ]] || usage 127; arg="$1" ;;
    esac
    echo "$arg"
    return $shift
}
subinfo() { echo -e "${color:+\e[36m}[=] $*\e[0m"; }
warn() { echo -e "${color:+\e[33m}[-] $*\e[0m"; }
### Helpers end

update_dns() {
    local creds="$username:$password"
    local query="hostname=$domain&myip=$1"
    curl -kLs "https://$creds@domains.google.com/nic/update?$query"
    echo
}

usage() {
    cat <<EOF
Usage: ${0##*/} [OPTIONS]

Detect when IP changes and update dynamic DNS entry using Google
Domains API.

Options:
    -d, --domain=DOMAIN    Domain entry to update
    -e, --external         Use external IP (default)
    -f, --file=FILE        Compare to IP in specified file
    --force                Update even if IP hasn't changed
    -h, --helpo            Display this help message
    -i, --internal         Use internal IP
    --iface=IFACE          Use specified interface (default: $iface)
    --ip=IP                Compare to specified IP
    --no-color             Disable colorized output
    -p, --pass=PASSWD      Password for API
    --url=URL              URL that returns just an IP (default: $url)
    -u, --user=USER        Username for API

EOF
    exit "$1"
}

declare -a args deps
unset domain file force help old_ip password username
color="true"
curl_cmd="curl --connect-timeout 8 -kLm 8 -s"
deps+=("curl")
deps+=("ip")
external="true"
url="https://icanhazip.com"

# Check for missing dependencies
check_deps

iface="$(ip -o a | grep -m 1 -oPs "\d:\s+\K[^l][^o]\S*")"

# Parse command line options
while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-d"|"--domain"*) domain="$(long_opt "$@")" || shift ;;
        "-e"|"--external") external="true" ;;
        "-f"|"--file"*) file="$(long_opt "$@")" || shift ;;
        "--force") force="true" ;;
        "-h"|"--help") help="true" ;;
        "-i"|"--internal") unset external ;;
        "--iface"*) iface="$(long_opt "$@")" || shift ;;
        "--ip"*) old_ip="$(long_opt "$@")" || shift ;;
        "--no-color") unset color ;;
        "-p"|"--pass"*) password="$(long_opt "$@")" || shift ;;
        "--url"*) url="$(long_opt "$@")" || shift ;;
        "-u"|"--user"*) username="$(long_opt "$@")" || shift ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ ${#args[@]} -eq 0 ]] || set -- "${args[@]}"

# Check for valid params
[[ -z $help ]] || usage 0
[[ $# -eq 0 ]] || usage 1
[[ -n $domain ]] || usage 2
[[ -n $iface ]] || usage 3
[[ -n $password ]] || usage 4
[[ -n $username ]] || usage 5

# Get data
[[ -z $file ]] || [[ ! -f "$file" ]] || old_ip="$(head -n 1 "$file")"
if [[ -n $external ]]; then
    new_ip="$($curl_cmd --interface "$iface" "$url")"
else
    new_ip="$(ip -o a | awk "/$iface\s+inet\s/ {print \$4}")"
    new_ip="${new_ip%/*}"
fi

# Compare and update
if [[ -n $force ]] ||
   [[ -z $old_ip ]] ||
   [[ "$new_ip" != "$old_ip" ]]
then
    echo "$new_ip" | tee "$file"
    update_dns "$new_ip"
fi
