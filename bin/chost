err() { echo -e "${color:+\e[31m}[!] $@\e[0m"; }

errx() { echo -e "${color:+\e[31m}[!] ${@:2}\e[0m"; exit $1; }

get_choices() {
    while read h; do
        echo "$h" | grep -Eqv "^ *$|^ *#" || continue
        echo -n "$h" | sed -e "s/ *|.*//g" -e "s/ /_/g"
        echo -n " . "
    done <$hosts_file
    echo -n "norc . "
    echo -n "quit . "
}

host_menu() {
    [[ -e $hosts_file ]] || touch $hosts_file
    if [[ $(grep -cEv "^ *$|^#" $hosts_file) -eq 0 ]]; then
        echo "localhost | $(which_shell)" >>$hosts_file
    fi

    lines="$(tput lines)"
    columns="$(tput cols)"
    let "menu_height = lines - 7"
    dialog --clear --nook --nocancel --no-shadow \
        --menu "Choose a host" $lines $columns $menu_height \
        $(get_choices) 2>/tmp/chost
    clear

    host="$(cat /tmp/chost)"
    rm -f /tmp/chost
    [[ -n $host ]] || host_menu
}

info() { echo -e "${color:+\e[37m}[*] $@\e[0m"; }

long_opt() {
    local arg shift="0"
    case "$1" in
        "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 1 ;;
        *) shift="1"; shift; [[ $# -gt 0 ]] || usage 1; arg="$1" ;;
    esac
    echo "$arg"
    return $shift
}

start_shell() {
    sh="$(which_shell)"
    $sh
}

usage() {
    echo "Usage: ${0/*\//} [OPTIONS]"
    echo
    echo "Automate starting up a new shell"
    echo
    echo "Options:"
    echo "    -c, --config=CONFIG    Use the specified config file"
    echo "    -h, --help             Display this help message"
    echo "    -l, --loop             Prompt for new host after exit"
    echo "    --nocolor              Disable colorized output"
    echo
    exit $1
}

warn() { echo -e "${color:+\e[33m}[-] $@\e[0m"; }

which_shell() {
    sh="$(awk -F ":" "/$(whoami)/ {print \$NF}" /etc/passwd)"
    [[ -n $sh ]] && echo -n "$sh" && return
    [[ -n $SHELL ]] && echo -n "$SHELL" && return
    if [[ -n $(command -v zsh) ]]; then
        echo -n "$(command -v zsh)"
        return
    fi
    if [[ -n $(command -v bash) ]]; then
        echo -n "$(command -v bash)"
        return
    fi
    echo -n "$(command -v sh)"
}

declare -a args
unset help loop
color="true"
hosts_file="$HOME/.config/chost/config"

# Parse command line options
while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-c"|"--config"*) hosts_file="$(long_opt $@)" || shift ;;
        "-h"|"--help") help="true" ;;
        "-l"|"--loop") loop="true" ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

[[ -z $help ]] || usage 0
[[ $# -eq 0 ]] || usage 2

# Ruby
export GEM_HOME="$HOME/.gem/ruby"
export GEM_PATH="$GEM_HOME/gems"

# Go
export GOPATH="$HOME/.go"

# Perl
export PERL_LOCAL_LIB_ROOT="$HOME/.cpan/perl5"

# PATH
# Find dirs that should be in PATH
unset PTH
for dir in \
    $HOME/bin \
    $GEM_HOME/bin \
    $HOME/.local/bin \
    $GOPATH \
    $GOPATH/bin \
    $PERL_LOCAL_LIB_ROOT/bin \
    /usr/local/bin \
    /usr/local/sbin \
    /usr/bin \
    /usr/sbin \
    /bin \
    /sbin \
    /usr/bin/core_perl \
    $HOME/Android/Sdk/platform-tools \
    $HOME/Android/Sdk/tools \
    $HOME/Android/Sdk/tools/bin \
    $HOME/Android/Ndk \
    $HOME/.rvm/bin \
; do
    [[ ! -d $dir ]] || PTH="$PTH:$dir"
done

# Find missing from PATH
for dir in $(echo "$PATH" | sed "s/:/ /g"); do
    [[ -n $(echo "$PTH" | grep $dir) ]] || PTH="$PTH:$dir"
done

# Set PATH
[[ -z $PTH ]] || export PATH="${PTH/:/}"
unset dir PTH

if [[ -z $(command -v dialog) ]]; then
    err "dialog is not installed"
    if [[ -n $(command -v apt-get) ]]; then
        errx 3 "Please run \"sudo apt-get install dialog\""
    elif [[ -n $(command -v brew) ]]; then
        errx 3 "Please run \"brew install dialog\""
    elif [[ -n $(command -v dnf) ]]; then
        errx 3 "Please run \"sudo dnf install dialog\""
    elif [[ -n $(command -v pacman) ]]; then
        errx 3 "Please run \"sudo pacman -S dialog\""
    elif [[ -n $(command -v yum) ]]; then
        errx 3 "Please run \"sudo yum install dialog\""
    fi
fi

# SSH agent
if [[ -n $(command -v ssh-agent) ]]; then
    [[ -f $HOME/.ssh/agent/env ]] && . $HOME/.ssh/agent/env >/dev/null
fi

mkdir -p $(dirname $hosts_file)

while :; do
    host_menu
    case "$host" in
        "localhost") start_shell ;;
        "norc") bash --norc ;;
        "quit") exit 0 ;;
        *)
            cmd="$(
                grep -E "^ *$host *\|" $hosts_file | sed "s/.*|//g"
            )"
            eval $cmd
            [[ $? -eq 0 ]] || sleep 2
            ;;
    esac
    [[ -n $loop ]] || break
done
