### Helpers begin
check_deps() {
    local missing
    for d in "${deps[@]}"; do
        if [[ -z $(command -v "$d") ]]; then
            # Force absolute path
            if [[ ! -e "/$d" ]]; then
                err "$d was not found"
                missing="true"
            fi
        fi
    done; unset d
    [[ -z $missing ]] || exit 128
}
err() { echo -e "${color:+\e[31m}[!] $*${color:+\e[0m}" >&2; }
errx() { err "${*:2}"; exit "$1"; }
good() { echo -e "${color:+\e[32m}[+] $*${color:+\e[0m}"; }
info() { echo -e "${color:+\e[37m}[*] $*${color:+\e[0m}"; }
long_opt() {
    local arg shift="0"
    case "$1" in
        "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || return 127 ;;
        *) shift="1"; shift; [[ $# -gt 0 ]] || return 127; arg="$1" ;;
    esac
    echo "$arg"
    return "$shift"
}
subinfo() { echo -e "${color:+\e[36m}[=] $*${color:+\e[0m}"; }
warn() { echo -e "${color:+\e[33m}[-] $*${color:+\e[0m}"; }
### Helpers end

usage() {
    cat <<EOF
Usage: ${0##*/} [OPTIONS]

DESCRIPTION
    Generate passwords using /dev/urandom.

OPTIONS
    -h, --help           Display this help message
    -l, --length=LEN     Use specified length (default: $length)
    --no-color           Disable colorized output
    -r, --regex=REGEX    Generate password matching specified regex
                         (default: $regex)

EOF
    exit "$1"
}

declare -a args
unset help
color="true"
length="64"
regex="[-A-Za-z0-9\`~!@#$%^&*()_+={}|;:'\",<.>/?]"

# Parse command line options
while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift; args+=("$@"); break ;;
        "-h"|"--help") help="true" ;;
        "-l"|"--length"*) length="$(long_opt "$@")" ;;
        "--no-color") unset color ;;
        "-r"|"--regex"*) regex="$(long_opt "$@")" ;;
        *) args+=("$1") ;;
    esac
    case "$?" in
        0) ;;
        1) shift ;;
        *) usage "$?" ;;
    esac
    shift
done
[[ ${#args[@]} -eq 0 ]] || set -- "${args[@]}"

# Help info
[[ -z $help ]] || usage 0

# Check for missing dependencies
declare -a deps
# deps+=("todo")
check_deps

# Check for valid params
[[ $# -eq 0 ]] || usage 1

info "Generating password"
subinfo "Length: $length"
subinfo "Regex: $regex"

unset passwd
while [[ ${#passwd} -lt $length ]]; do
    char="$(head -c 1 /dev/urandom | grep -Ps "$regex")"
    [[ -z $char ]] || passwd="$passwd$char"
done

good "$passwd"
