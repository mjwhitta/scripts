### Helpers begin
check_deps() {
    for d in "${deps[@]}"; do
        [[ -n $(command -v "$d") ]] || errx 128 "$d is not installed"
    done; unset d
}
err() { echo -e "${color:+\e[31m}[!] $*\e[0m"; }
errx() { err "${*:2}"; exit "$1"; }
good() { echo -e "${color:+\e[32m}[+] $*\e[0m"; }
info() { echo -e "${color:+\e[37m}[*] $*\e[0m"; }
long_opt() {
    local arg shift="0"
    case "$1" in
        "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 127 ;;
        *) shift="1"; shift; [[ $# -gt 0 ]] || usage 127; arg="$1" ;;
    esac
    echo "$arg"
    return $shift
}
subinfo() { echo -e "${color:+\e[36m}[=] $*\e[0m"; }
warn() { echo -e "${color:+\e[33m}[-] $*\e[0m"; }
### Helpers end

usage() {
    cat <<EOF
Usage: ${0##*/} [OPTIONS] [directory]

Rotate wallpaper using images from specified directory or config file.
Currently it uses nitrogen but it could be extended to use other
background setters.

Options:
    -d, --delay=NUM    Rotate image every NUM secs (default: 120)
    -h, --help         Display this help message
    --nocolor          Disable colorized output
EOF
    exit "$1"
}

declare -a args deps
unset help
color="true"
delay="120"
deps+=("nitrogen")

# Check for missing dependencies
check_deps

# Parse command line options
while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-d"|"--delay"*) delay="$(long_opt "$@")" || shift ;;
        "-h"|"--help") help="true" ;;
        "--nocolor") unset color ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ ${#args[@]} -eq 0 ]] || set -- "${args[@]}"

# Check for valid params
[[ -z $help ]] || usage 0
[[ $# -le 1 ]] || usage 1

if [[ $# -eq 1 ]]; then
    dir="$1"
else
    [[ -f "$HOME/.wallpaper_slideshow_rc" ]] || usage 1
    dir="$(cat "$HOME/.wallpaper_slideshow_rc")"
fi

[[ -d "$dir" ]] || usage 2

while :; do
    while read -r wallpaper; do
        nitrogen --set-scaled --save "$wallpaper"
        sleep "$delay"
    done < <(find "$dir" -mindepth 1 -type f | sort -R)
    unset wallpaper
done
