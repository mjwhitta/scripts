### Helpers begin
checkdeps() {
    for d in "${deps[@]}"; do
        [[ -n $(command -v $d) ]] || errx 128 "$d is not installed"
    done; unset d
}
err() { echo -e "${color:+\e[31m}[!] $@\e[0m"; }
errx() { echo -e "${color:+\e[31m}[!] ${@:2}\e[0m"; exit $1; }
good() { echo -e "${color:+\e[32m}[+] $@\e[0m"; }
info() { echo -e "${color:+\e[37m}[*] $@\e[0m"; }
long_opt() {
    local arg shift="0"
    case "$1" in
        "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || usage 127 ;;
        *) shift="1"; shift; [[ $# -gt 0 ]] || usage 127; arg="$1" ;;
    esac
    echo "$arg"
    return $shift
}
subinfo() { echo -e "${color:+\e[36m}[=] $@\e[0m"; }
warn() { echo -e "${color:+\e[33m}[-] $@\e[0m"; }
### Helpers end

usage() {
    echo "Usage: ${0##*/} [OPTIONS] <directory>"
    echo
    echo "Rotate wallpaper using images from specified directory."
    echo "Currently it uses nitrogen but it could be extended to use"
    echo "other background setters."
    echo
    echo "Options:"
    echo "    -d, --delay=NUM    Rotate image every NUM secs"
    echo "                       (default: $delay)"
    echo "    -h, --help         Display this help message"
    echo "    --nocolor          Disable colorized output"
    echo
    exit $1
}

declare -a args deps
unset help
color="true"
delay="120"
deps+=("nitrogen")

# Check for missing dependencies
checkdeps

# Parse command line options
while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-d"|"--delay"*) delay="$(long_opt "$@")" || shift ;;
        "-h"|"--help") help="true" ;;
        "--nocolor") unset color ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

# Check for valid params
[[ -z $help ]] || usage 0
[[ $# -eq 1 ]] || usage 1
[[ -d $1 ]] || usage 2

while :; do
    wallpapers=($(find $1 -mindepth 1 -type f | sort -R))
    for wallpaper in "${wallpapers[@]}"; do
        nitrogen --set-scaled --save $wallpaper
        sleep $delay
    done; unset wallpaper
done
