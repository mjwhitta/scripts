usage() {
    echo "Usage: ${0/*\//} [OPTIONS] <directory>"
    echo
    echo "Rotate wallpaper using images from specified directory."
    echo "Currently it uses nitrogen but it could be extended to use"
    echo "other background setters."
    echo
    echo "Options:"
    echo "    -d, --delay=NUM    Rotate image every NUM secs"
    echo "                       (default: $delay)"
    echo "    -h, --help         Display this help message"
    echo
    exit $1
}

declare -a args
delay="120"

while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-d"|"--delay"*)
            case "$1" in
                "--"*"="*)
                    arg="$(echo "$1" | sed -r "s/[^=]+=//")"
                    [[ -n $arg ]] || usage 1
                    ;;
                *) shift; [[ $# -gt 0 ]] || usage 1; arg="$1" ;;
            esac
            delay="$arg"
            ;;
        "-h"|"--help") usage 0 ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

[[ $# -eq 1 ]] || usage 1
[[ -d $1 ]] || usage 2

while :; do
    wallpapers=($(find $1 -mindepth 1 -type f | sort -R))
    for wallpaper in "${wallpapers[@]}"; do
        nitrogen --set-scaled --save $wallpaper
        sleep $delay
    done; unset wallpaper
done
