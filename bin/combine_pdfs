usage() {
    echo "Usage: ${0/*\//} [OPTIONS] <pdf1> <pdf2>...[pdfN]"
    echo
    echo "Combine multiple PDFs into one"
    echo
    echo "Options:"
    echo "    -h, --help           Display this help message"
    echo "    -t, --title=TITLE    Use the specified title (default:"
    echo "                         $title)"
    echo
    exit $1
}

declare -a args
title="${PWD##*/}"

while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift && args+=("$@") && break ;;
        "-h"|"--help") usage 0 ;;
        "-t"|"--title"*)
            case "$1" in
                "--"*"="*)
                    arg="$(echo "$1" | sed -r "s/[^=]+=//")"
                    [[ -n $arg ]] || usage 1
                    ;;
                *) shift; [[ $# -gt 0 ]] || usage 1; arg="$1" ;;
            esac
            title="$arg"
            ;;
        *) args+=("$1") ;;
    esac
    shift
done
[[ -z ${args[@]} ]] || set -- "${args[@]}"

[[ $# -gt 1 ]] || usage 2
[[ -n $(command -v gs) ]] || usage 3

gs -dBATCH -dNOPAUSE -q -sDEVICE=pdfwrite -sOutputFile=$title.pdf "$@"
