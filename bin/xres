#!/usr/bin/env bash

### Helpers begin
check_deps() {
    local missing
    for d in "${deps[@]}"; do
        if [[ -z $(command -v "$d") ]]; then
            # Force absolute path
            if [[ ! -e "/$d" ]]; then
                err "$d was not found"
                missing="true"
            fi
        fi
    done; unset d
    [[ -z $missing ]] || exit 128
}
err() { echo -e "${color:+\e[31m}[!] $*${color:+\e[0m}" >&2; }
errx() { err "${*:2}"; exit "$1"; }
good() { echo -e "${color:+\e[32m}[+] $*${color:+\e[0m}"; }
info() { echo -e "${color:+\e[37m}[*] $*${color:+\e[0m}"; }
long_opt() {
    local arg shift="0"
    case "$1" in
        "--"*"="*) arg="${1#*=}"; [[ -n $arg ]] || return 127 ;;
        *) shift="1"; shift; [[ $# -gt 0 ]] || return 127; arg="$1" ;;
    esac
    echo "$arg"
    return "$shift"
}
subinfo() { echo -e "${color:+\e[36m}[=] $*${color:+\e[0m}"; }
warn() { echo -e "${color:+\e[33m}[-] $*${color:+\e[0m}"; }
### Helpers end

usage() {
    cat <<EOF
Usage: ${0##*/} [OPTIONS]

DESCRIPTION
    Very easily set resolution.

OPTIONS
    -h, --help       Display this help message
    -r, --res=WxH    Use specified resolution

EOF
    exit "$1"
}

declare -a args
unset help res
color="true"

# Parse command line options
while [[ $# -gt 0 ]]; do
    case "$1" in
        "--") shift; args+=("$@"); break ;;
        "-h"|"--help") help="true" ;;
        "-r"|"--res"*) res="$(long_opt "$@")" ;;
        *) args+=("$1") ;;
    esac
    case "$?" in
        0) ;;
        1) shift ;;
        *) usage "$?" ;;
    esac
    shift
done
[[ ${#args[@]} -eq 0 ]] || set -- "${args[@]}"

# Help info
[[ -z $help ]] || usage 0

# Check for missing dependencies
declare -a deps
deps+=("cvt")
deps+=("grep")
deps+=("pgrep")
deps+=("sed")
deps+=("tail")
deps+=("xrandr")
check_deps

# Check for valid params
[[ $# -eq 0 ]] || usage 1
[[ -n $res ]] || usage 2

display="$(xrandr | grep -ioPs "^\S+(?=\s+connected\s+)")"
modeline="$(
    cvt "${res/x*/}" "${res/*x/}" | tail -n 1 | \
    sed -r "s/^Modeline |\"|_60\.00//g"
)"

name="${modeline%% *}"
modeline="${modeline#* }"

# Add specified resolution if needed
if [[ -z $(xrandr | grep -Ps "^\s+$name\s+") ]]; then
    xrandr --newmode "$name" "$modeline"
    xrandr --addmode "$display" "$name"
fi

# Set specified resolution
xrandr --output "$display" --mode "$name"
[[ $? -eq 0 ]] || errx 3 "Failed to set resolution"

# Fix some other things
if [[ -n $(command -v nitrogen) ]] && [[ -n $(pgrep nitrogen) ]]; then
    nitrogen --restore
fi
if [[ -n $(command -v openbox) ]] && [[ -n $(pgrep openbox) ]]; then
    openbox --restart
fi
[[ -z $(command -v snapwin) ]] || snapwin --replay
